<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>MOD_PHPROBERTO_GHCARD</name>
	<author>Roberto Segura</author>
	<creationDate>February 2015</creationDate>
	<copyright>Copyright (C) 2015 Roberto Segura LÃ³pez. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>roberto@phproberto.com</authorEmail>
	<authorUrl>www.phproberto.com</authorUrl>
	<version>1.0.0</version>
	<description>MOD_PHPROBERTO_GHCARD_XML_DESCRIPTION</description>

	<install folder="sql">
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/install.sql</file>
		</sql>
	</install>
	<uninstall folder="sql">
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/uninstall.sql</file>
		</sql>
	</uninstall>
	<update folder="sql">
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files>
		<folder>language</folder>
		<folder>module</folder>
		<folder>sql</folder>
		<folder>table</folder>
		<folder>tmpl</folder>
		<filename module="mod_phproberto_ghcard">mod_phproberto_ghcard.php</filename>
		<filename>mod_phproberto_ghcard.xml</filename>
	</files>

	<media folder="media">
		<folder>mod_phproberto_ghcard</folder>
	</media>

	<updateservers>
		<server type="extension" priority="1" name="phproberto - Github Card">https://raw.github.com/phproberto/joomla-updates/master/mod_phproberto_ghcard/updates.xml</server>
	</updateservers>

	<config>
		<fields name="params" addfieldpath="modules/mod_phproberto_ghcard/field">
			<fieldset name="basic">
				<field
					name="github_member"
					type="text"
					label="MOD_PHPROBERTO_GHCARD_PARAMS_GITHUB_MEMBER"
					description="MOD_PHPROBERTO_GHCARD_PARAMS_GITHUB_MEMBER_DESC"
				/>
				<field
					name="github_user"
					type="text"
					label="MOD_PHPROBERTO_GHCARD_PARAMS_GITHUB_USERNAME"
					description="MOD_PHPROBERTO_GHCARD_PARAMS_GITHUB_USERNAME_DESC"
				/>
				<field
					name="github_password"
					type="password"
					label="MOD_PHPROBERTO_GHCARD_PARAMS_GITHUB_PASSWORD"
					description="MOD_PHPROBERTO_GHCARD_PARAMS_GITHUB_PASSWORD_DESC"
				/>
				<field
					name="layout"
					type="modulelayout"
					default="_:default"
					label="MOD_PHPROBERTO_GHCARD_PARAMS_LAYOUT"
					description="MOD_PHPROBERTO_GHCARD_PARAMS_LAYOUT_DESC"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="debug"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_PHPROBERTO_GHCARD_PARAMS_DEBUG"
					description="MOD_PHPROBERTO_GHCARD_PARAMS_DEBUG_DESC"
					>
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
